// Static tasks configuration.
//
// Example:
[
  {
    "label": "Run $ZED_STEM",
    "command": "g++",
    "args": [
      "-fdiagnostics-color=always",
      "-std=c++20",
      "-g",
      "$ZED_FILE",
      "-o",
      "$ZED_WORKTREE_ROOT/build/$ZED_STEM",
      "&&",
      "$ZED_WORKTREE_ROOT/build/$ZED_STEM"
    ],
    "cwd": "$ZED_WORKTREE_ROOT",
    "tags": ["c-main"]
  }
]
